- var debug = true;
doctype html
html(lang="ja")
    head
        meta(charset="utf-8")
        meta(name="format-detection", content="telephone=no")
        meta(name="msapplication-tap-highlight", content="no")
        meta(name="viewport", content="user-scalable=no, initial-scale=1, maximum-scale=1, minimum-scale=1, width=device-width, height=device-height")
        title Inquiry
        link(rel="stylesheet", type="text/css", href="/bower_components/angular-material/angular-material.min.css")
        link(rel="stylesheet", type="text/css", href="stylesheets/style.css")
    body(ng-app="AccountApplication", ng-controller="ApplicationController",layout="column", layout-fill,style="background-color: #A0A0FF;")

        md-toolbar(md-scroll-shrink)
            .md-toolbar-tools(layout-align="start center")
                h3.md-display-1(flex="60") {{username}} - {{type}}

                div(flex="10")
                    md-button.md-fab.md-primary(ng-click="goTop()", aria-label="")
                        ng-md-icon(icon="home", aria-label="Top", style="fill:#abcdef", size="46")
                        md-tooltip {{'top' | message }}

                div(flex="10", ng-if="type == 'Admin'")
                    md-button.md-fab.md-primary(ng-click="goConfig()", aria-label="")
                        ng-md-icon(icon="settings", aria-label="Config", style="fill:#abcdef", size="46")
                        md-tooltip {{'config' | message }}

                div(flex="10", ng-show="mode == 'Patient'")
                    md-button.md-fab.md-primary(ng-click="goAccount()", aria-label="")
                        ng-md-icon(icon="face", aria-label="Account", style="fill:#abcdef", size="46")
                        md-tooltip {{'stuff' | message}}

                div(flex="10", ng-show="mode == 'Account'")
                    md-button.md-fab.md-accent(ng-click="goPatient()", aria-label="")
                        ng-md-icon(icon="perm_identity", aria-label="Patients", style="fill:#abcdef", size="46")
                        md-tooltip {{'patient' | message }}

                div(flex, ng-if="type == ''")
                    md-button.md-fab.md-warn(ng-click="showLoginDialog()", aria-label="")
                        ng-md-icon(icon="check_box_outline_blank", aria-label="Account", style="fill:#abcdef", size="46")
                        md-tooltip {{'login' | message }}

                div(flex, ng-if="type != ''")
                    md-button.md-fab.md-warn(ng-click="Logout()", aria-label="")
                        ng-md-icon(icon="check_box", aria-label="Account", style="fill:#abcdef", size="46")
                        md-tooltip {{'logout' | message }}

        div(layout="row")
            div(flex)
                div(ui-view="")

    script(type="text/javascript", src="/socket.io/socket.io.js")
    script(type="text/javascript", src="/bower_components/hammerjs/hammer.min.js")
    script(type="text/javascript", src="/bower_components/angular/angular.min.js")
    script(type="text/javascript", src="/bower_components/angular-ui-router/release/angular-ui-router.min.js")
    script(type="text/javascript", src="/bower_components/angular-animate/angular-animate.min.js")
    script(type="text/javascript", src="/bower_components/angular-aria/angular-aria.min.js")
    script(type="text/javascript", src="/bower_components/angular-material/angular-material.min.js")
    script(type="text/javascript", src="/bower_components/angular-material-icons/angular-material-icons.min.js")
    script(type="text/javascript", src="/bower_components/angular-messages/angular-messages.min.js")
    script(type="text/javascript", src="/bower_components/angular-resource/angular-resource.min.js")

    script(type="text/javascript", src="javascripts/canvas2image/canvas2image.js")
    script(type="text/javascript", src="javascripts/svg-morpheus.js")

    script(type="text/javascript", src="/bower_components/lodash/lodash.min.js")
    script(type="text/javascript", src="/bower_components/fabric/dist/fabric.min.js")

if debug
    script(type="text/javascript", src="javascripts/AccountApplication.js")
    script(type="text/javascript", src="javascripts/AccountControllers.js")
    script(type="text/javascript", src="../javascripts/TopControllers.js")
else
    script(type="text/javascript", src="javascripts/AccountApplication.min.js")
    script(type="text/javascript", src="javascripts/AccountControllers.min.js")
    script(type="text/javascript", src="../javascripts/TopControllers.min.js")