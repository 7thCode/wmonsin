extends layout.jade

block content

    body(ng-app="TopApplication", layout-fill, style="background-color: #81D4FA;")
        md-toolbar(md-scroll-shrink)
            .md-toolbar-tools(layout="row", layout-align="end center")
                h3(flex)
                    span TOP
                div(layout="row")
                    md-button.md-raised.md-primary(ng-href='/front/#/browseS', aria-label="", ng-bind="'front' | message")
                    md-button.md-raised.md-primary(ng-href='/backend/#/start', aria-label="", ng-bind="'stuff' | message")
        div(ui-view="")

block include

    if debug
        script(type="text/javascript", src="javascripts/TopApplication.js")
        script(type="text/javascript", src="javascripts/TopControllers.js")
    else
        script(type="text/javascript", src="javascripts/TopApplication.min.js")
        script(type="text/javascript", src="javascripts/TopControllers.min.js")