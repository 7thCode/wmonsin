md-dialog(flex)
    md-toolbar
        .md-toolbar-tools(layout="row", layout-align="end center")
            h3(flex)
                span(flex) ボタン
            div
                md-button.md-fab.md-warn(ng-click='cancel()', aria-label="Cancel", style="position:relative;top:20px;")
                    ng-md-icon.iconfill(icon="clear", style="position:relative;top:4px;", size="46")
                    md-tooltip キャンセル

    md-dialog-content
        ng-form(name="validate")
            div(layout="column")
                div(layout="row", layout-align="start center")

                    md-input-container(flex)
                        label アイテムラベル
                        input(ng-model="items.label", data-ng-required="true", name="label", placeholder='Enter Label', md-maxlength="30", required)
                        div(ng-messages="validate.label.$error")
                            div(ng-message="required") {{'required' | message}}
                            div(ng-message="md-maxlength") {{'maxlength' | message}}

                    md-input-container(flex)
                        label アイテム名
                        input(ng-model="items.name", data-ng-required="true", name="name", placeholder='Enter Name', md-maxlength="30", required)
                        div(ng-messages="validate.name.$error")
                            div(ng-message="required") {{'required' | message}}
                            div(ng-message="md-maxlength") {{'maxlength' | message}}

                div(layout="row")
                    md-input-container(flex)
                        label パス
                        input(ng-model="items.path", data-ng-required="true", name="path", placeholder='Enter Path', md-maxlength="50", required)
                        div(ng-messages="validate.path.$error")
                            div(ng-message="required") {{'required' | message}}
                            div(ng-message="md-maxlength") {{'maxlength' | message}}

                div(layout="row")
                    md-switch(ng-model="items.validate", aria-label="validate", equired) バリデート

                    md-select(ng-model="items.class", equired)
                        md-option(value="md-primary") 標準
                        md-option(value="md-accent") アクセント
                        md-option(value="md-warn") 注意

                md-divider
                div.md-actions(layout="row", layout-align="space-around center")
                    md-button.md-raised.md-primary(ng-click='answer()', ng-disabled="validate.$invalid", aria-label="") 登録
