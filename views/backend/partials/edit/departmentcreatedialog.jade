md-dialog(flex)
    md-toolbar
        .md-toolbar-tools(layout="row", layout-align="end center")
            h3(flex)
                span(flex) 診療科登録
            div
                md-button.md-fab.md-warn(ng-click='cancel()', aria-label="Cancel", style="position:relative;top:20px;")
                    ng-md-icon(icon="clear", style="position:relative;top:4px;fill:#ffffff", size="46")
                    md-tooltip キャンセル

    md-dialog-content
        ng-form(name="validate")
            div(layout="row", layout-align="start center")
                ng-md-icon(icon="account_circle", style="fill:#abcdef", size="46")
                md-input-container(flex)
                    label 診療科名
                    input(ng-model="items.department", data-ng-required="true", name="department", placeholder='Enter Department name', md-maxlength="30", required)
                    div(ng-messages="validate.department.$error")
                        div(ng-message="required") {{'required' | message}}
                        div(ng-message="md-maxlength") {{'maxlength' | message}}

            md-divider
            div.md-actions(layout="row", layout-align="space-around center")
                md-button.md-raised.md-primary(ng-click='answer()', ng-disabled="validate.$invalid", aria-label="") 登録