- var content = {headline:"問診票科目", save:"保存", add:"追加...", update:"更新...", delete:"削除"}

md-content.background
    md-progress-circular.md-accent(ng-show="progress", md-mode="indeterminate", style="position:absolute;top:50%;left:50%;")
    md-card
        md-card-header
            h1.md-headline #{content.headline}
            md-button.md-fab(ng-click="showDepartmentCreateDialog()", ng-if="type != 'Viewer'", aria-label="",style="background-color:#FBC02D")
                ng-md-icon.iconfill(icon="note_add", aria-label="", style="position:relative;top:6px;left:1px;", size="42")
                md-tooltip #{content.add}
    md-list
        md-list-item(ng-repeat="Department in Departments", ng-show="account.type != 'Admin'")
            md-card(layout="row", flex)
                md-card-content(layout="row", layout-align="center center", flex)
                    h3.md-title(flex="80") {{Department.Name}}
                    div(flex="10", ng-if="type == 'Viewer'")
                        ng-md-icon(icon="person", size="50")
                    div(flex="10", ng-if="type != 'Viewer'")
                        md-button.md-fab(ng-click="DepartmentUpdate(Department._id)", aria-label="Update", layout-align="center center",style="background-color:#6570cc;z-index:1;")
                            ng-md-icon.iconfill(icon="pages",style="position:relative;top:6px;left:1px;", size="42")
                            md-tooltip #{content.update}
                    div(flex="10")
                        md-button.md-fab(ng-click="showDepartmentDeleteDialog(Department._id)", aria-label="Delete", ng-if="type != 'Viewer'", layout-align="center center" ,style="background-color:#ff5050;z-index:1;")
                            ng-md-icon.iconfill(layout-align="center center", icon="remove", style="position:relative;top:6px;left:1px;", size="42")
                            md-tooltip #{content.delete}