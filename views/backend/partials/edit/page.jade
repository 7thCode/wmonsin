md-content(style="background-color: #A0A0FF;")
    md-progress-circular.md-accent(ng-show="progress", md-mode="indeterminate", style="position:absolute;top:50%;left:50%;")
    md-card
        ng-form(name="validate")
            md-card-header

                md-input-container(flex)
                    label ページタイトル
                    input(ng-model="Page.headline", data-ng-required="true", name="title", placeholder='Enter Username', md-maxlength="30", required)
                    div(ng-messages="validate.title.$error")
                        div(ng-message="required") {{'required' | message}}
                        div(ng-message="md-maxlength") {{'maxlength' | message}}

                div(class="lock-size" layout="row" layout-align="start center",ng-if="type != 'Viewer'",style="z-index:1;")
                    md-fab-speed-dial.md-fling(md-open="false", md-direction="right")
                        md-fab-trigger
                            md-button.md-fab.md-warn(aria-label="menu")
                                ng-md-icon(icon="menu", aria-label="問診票科目", style="position:relative;top:6px;left:1px;fill:#eeeeee", size="42")
                        md-fab-actions

                            md-button.md-fab(aria-label="",ng-click="showTextCreateDialog()", style="background-color:#ffffff;z-index:10;")
                                ng-md-icon(icon="edit", aria-label="問診票科目", style="position:relative;top:6px;left:1px;fill:#abcdef", size="42")
                                md-tooltip テキスト

                            md-button.md-fab(aria-label="",ng-click="showCheckCreateDialog()", style="background-color:#eeeeff;z-index:10;")
                                ng-md-icon(icon="check_circle", aria-label="問診票科目", style="position:relative;top:6px;left:1px;fill:#9abcde", size="42")
                                md-tooltip チェックボックス

                            md-button.md-fab.md-primary(aria-label="",ng-click="showSelectCreateDialog()", style="background-color:#ddddff;z-index:10;")
                                ng-md-icon(icon="list", aria-label="問診票科目", style="position:relative;top:6px;left:1px;fill:#789abc", size="42")
                                md-tooltip ラジオ

                            md-button.md-fab.md-primary(aria-label="",ng-click="showNumericCreateDialog()", style="background-color:#ccccff;z-index:10;")
                                ng-md-icon(icon="dialpad", aria-label="問診票科目", style="position:relative;top:6px;left:1px;fill:#56789a", size="42")
                                md-tooltip 数値

                            md-button.md-fab.md-primary(aria-label="",ng-click="showButtonCreateDialog()", style="background-color:#bbbbff;z-index:10;")
                                ng-md-icon(icon="crop_5_4", aria-label="問診票科目", style="position:relative;top:6px;left:1px;fill:#345678", size="42")
                                md-tooltip ボタン

                            md-button.md-fab.md-primary(aria-label="",ng-click="showPictureCreateDialog()", style="background-color:#bbbbff;z-index:10;", ng-show="Page.picture.length <= 0")
                                ng-md-icon(icon="picture_in_picture", aria-label="問診票科目", style="position:relative;top:6px;left:1px;fill:#345678", size="42")
                                md-tooltip シェーマ

    md-list
        md-list-item(ng-repeat="item in Page.items", ng-show="account.type != 'Admin'")
            md-card(layout="row", flex)

                md-card-content(layout="row", layout-align="center center", flex)
                    h3.md-title(flex="30") {{item.type}}
                    h4(flex="30") {{item.name}}

                    div(layout="row", ng-if="type != 'Viewer'")
                        md-button.md-fab(ng-click="up($index)", aria-label="Up", ng-if="type != 'Viewer'", layout-align="center center" ,style="background-color:#64ffda;z-index:1;")
                            ng-md-icon(layout-align="center center", icon="keyboard_arrow_up", style="position:relative;top:6px;left:1px;fill:#eeeeee", size="42")
                            md-tooltip Up

                    div(layout="row", ng-if="type != 'Viewer'")
                        md-button.md-fab(ng-click="down($index)", aria-label="Down", ng-if="type != 'Viewer'", layout-align="center center" ,style="background-color:#69F0AE;z-index:1;")
                            ng-md-icon(layout-align="center center", icon="keyboard_arrow_down", style="position:relative;top:6px;left:1px;fill:#eeeeee", size="42")
                            md-tooltip Down

                    div(layout="row", ng-if="item.type == 'text'")
                        div(flex, ng-if="type != 'Viewer'")
                            md-button.md-fab.md-primary(ng-click="showCheckUpdateDialog($index)", aria-label="Update", layout-align="center center",style="background-color:#6570cc;z-index:1;")
                                ng-md-icon(icon="event_note",style="position:relative;top:6px;left:1px;fill:#eeeeee", size="42")
                                md-tooltip 更新...
                        div(flex)
                            md-button.md-fab.md-warn(ng-click="showCheckDeleteDialog($index)", aria-label="Delete", ng-if="type != 'Viewer'", layout-align="center center" ,style="background-color:#ff5050;z-index:1;")
                                ng-md-icon(layout-align="center center", icon="remove", style="position:relative;top:6px;left:1px;fill:#eeeeee", size="42")
                                md-tooltip 削除

                    div(layout="row", ng-if="item.type == 'check'")
                        div(flex, ng-if="type != 'Viewer'")
                            md-button.md-fab.md-primary(ng-click="showCheckUpdateDialog($index)", aria-label="Update", layout-align="center center",style="background-color:#6570cc;z-index:1;")
                                ng-md-icon(icon="event_note",style="position:relative;top:6px;left:1px;fill:#eeeeee", size="42")
                                md-tooltip 更新...
                        div(flex)
                            md-button.md-fab.md-warn(ng-click="showCheckDeleteDialog($index)", aria-label="Delete", ng-if="type != 'Viewer'", layout-align="center center" ,style="background-color:#ff5050;z-index:1;")
                                ng-md-icon(layout-align="center center", icon="remove", style="position:relative;top:6px;left:1px;fill:#eeeeee", size="42")
                                md-tooltip 削除

                    div(layout="row", ng-if="item.type == 'select'")
                        div(flex, ng-if="type != 'Viewer'")
                            md-button.md-fab.md-primary(ng-click="showSelectUpdateDialog($index)", aria-label="Update", layout-align="center center",style="background-color:#6570cc;z-index:1;")
                                ng-md-icon(icon="event_note",style="position:relative;top:6px;left:1px;fill:#eeeeee", size="42")
                                md-tooltip 更新...
                        div(flex)
                            md-button.md-fab.md-warn(ng-click="showSelectDeleteDialog($index)", aria-label="Delete", ng-if="type != 'Viewer'", layout-align="center center" ,style="background-color:#ff5050;z-index:1;")
                                ng-md-icon(layout-align="center center", icon="remove", style="position:relative;top:6px;left:1px;fill:#eeeeee", size="42")
                                md-tooltip 削除

                    div(layout="row", ng-if="item.type == 'numeric'")
                        div(flex, ng-if="type != 'Viewer'")
                            md-button.md-fab.md-primary(ng-click="showNumericUpdateDialog($index)", aria-label="Update", layout-align="center center",style="background-color:#6570cc;z-index:1;")
                                ng-md-icon(icon="event_note",style="position:relative;top:6px;left:1px;fill:#eeeeee", size="42")
                                md-tooltip 更新...
                        div(flex)
                            md-button.md-fab.md-warn(ng-click="showNumericDeleteDialog($index)", aria-label="Delete", ng-if="type != 'Viewer'", layout-align="center center" ,style="background-color:#ff5050;z-index:1;")
                                ng-md-icon(layout-align="center center", icon="remove", style="position:relative;top:6px;left:1px;fill:#eeeeee", size="42")
                                md-tooltip 削除

                    div(layout="row", ng-if="item.type == 'button'")
                        div(flex, ng-if="type != 'Viewer'")
                            md-button.md-fab.md-primary(ng-click="showButtonUpdateDialog($index)", aria-label="Update", layout-align="center center",style="background-color:#6570cc;z-index:1;")
                                ng-md-icon(icon="event_note",style="position:relative;top:6px;left:1px;fill:#eeeeee", size="42")
                                md-tooltip 更新...
                        div(flex)
                            md-button.md-fab.md-warn(ng-click="showButtonDeleteDialog($index)", aria-label="Delete", ng-if="type != 'Viewer'", layout-align="center center" ,style="background-color:#ff5050;z-index:1;")
                                ng-md-icon(layout-align="center center", icon="remove", style="position:relative;top:6px;left:1px;fill:#eeeeee", size="42")
                                md-tooltip 削除

    md-list
        md-list-item(ng-repeat="picture in Page.picture", ng-show="account.type != 'Admin'")
            md-card(layout="row", flex)
                md-card-content(layout="row", layout-align="center center", flex)
                    h3.md-title(flex="40") {{picture.type}}
                    h4(flex="40") {{picture.name}}
                    div(layout="row", ng-if="picture.type == 'picture'")
                        div(flex, ng-if="type != 'Viewer'")
                            md-button.md-fab.md-primary(ng-click="showPictureUpdateDialog($index)", aria-label="Update", layout-align="center center",style="background-color:#6570cc;z-index:1;")
                                ng-md-icon(icon="event_note",style="position:relative;top:6px;left:1px;fill:#eeeeee", size="42")
                                md-tooltip 更新...
                        div(flex)
                            md-button.md-fab.md-warn(ng-click="showPictureDeleteDialog($index)", aria-label="Delete", ng-if="type != 'Viewer'", layout-align="center center" ,style="background-color:#ff5050;z-index:1;")
                                ng-md-icon(layout-align="center center", icon="remove", style="position:relative;top:6px;left:1px;fill:#eeeeee", size="42")
