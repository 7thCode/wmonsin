md-dialog(flex)
    md-toolbar
        .md-toolbar-tools(layout="row", layout-align="end center")
            h3(flex)
                span(flex) 更新
            div
                md-button.md-raised.md-primary(ng-click='cancel()', aria-label="Cancel")
                    ng-md-icon(icon="cancel", style="fill:#ffffff", size="46")
                    md-tooltip キャンセル

    md-content
        md-card
            md-card-content
                ng-form(name="validate")
                    div(layout="row", layout-align="start center")
                        ng-md-icon(icon="account_circle", style="fill:#abcdef", size="46")
                        md-input-container(flex)
                            label {{ 'name' | message }}
                            input(ng-model="items.username", data-ng-required="true", name="username", placeholder='Enter Username', md-maxlength="30", required)
                            div(ng-messages="validate.username.$error")
                                div(ng-message="required") {{'required' | message}}
                                div(ng-message="md-maxlength") {{'maxlength' | message}}

                    div(layout="row", layout-align="start center")
                        ng-md-icon(icon="vpn_key", style="fill:#ffcdef",size="46")
                        md-input-container(flex)
                            label {{'password' | message }}
                            input(ng-model="items.password", data-ng-required="true", name="password", placeholder='Enter New Password', md-maxlength="30", required)
                            div(ng-messages="validate.password.$error")
                                div(ng-message="required") {{'required' | message}}
                                div(ng-message="md-maxlength") {{'maxlength' | message}}

                    md-radio-group(ng-model="items.type", aria-label="")
                        md-radio-button(value="Editor", aria-label="Editor") ドクター(編集権限)
                        md-radio-button(value="Viewer", aria-label="Viewer") ナース(参照権限)

                    div(layout="row", layout-align="space-around center")
                        md-button.md-raised.md-primary(ng-click='answer()', ng-disabled="validate.username.$invalid", aria-label="Save") {{'save' | message}}
                        md-button.md-raised.md-warn(ng-click='changePassword()', ng-disabled="validate.password.$invalid", aria-label="Password") {{'changepass' | message}}